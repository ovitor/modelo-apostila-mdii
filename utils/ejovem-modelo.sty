% criando celula especial (com quebra de linha)
% uso: \specialcell{linha1 \\ linha2} (alinhado verticalmente)
% uso: \specialcell[t]{linha1 \\ linha2} (alinhado no topo)
% uso: \specialcell[b]{linha1 \\ linha2} (alinhado embaixo)
% ---
\newcommand{\specialcell}[2][c]{%
  \begin{tabular}[#1]{@{}c@{}}#2\end{tabular}}

% ---
% add figura simples
% ---
\newcommand{\figurasimples}[2]{
	\begin{figure}[H]
		\begin{center}
			\includegraphics[width=8cm]{#1}
			\caption{#2}
			\label{fig:#1}
		\end{center}
	\end{figure}
}

% ---
% add figura dupla 
% ---
\newcommand{\figuradupla}[4]{
	\begin{figure}[H]
		\begin{center}	
			\begin{subfigure}[b]{.45\textwidth}
				\includegraphics[width=\textwidth]{#1}
				\caption{}
				\label{fig:#1}
			\end{subfigure}
			~
			\begin{subfigure}[b]{.45\textwidth}
				\includegraphics[width=\textwidth]{#3}
				\caption{}
				\label{fig:#3}
			\end{subfigure}

		\end{center}
		\caption{(a) #2; (b) #4.}
	\end{figure}
}

